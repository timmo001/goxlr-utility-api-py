{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Get Status",
      "type": "python",
      "request": "launch",
      "module": "goxlrutilityapi",
      "preLaunchTask": "Module: pip install",
      "cwd": "${workspaceFolder}/module",
      "justMyCode": false,
      "args": ["get_status", "--debug"]
    },
    {
      "name": "Listen for Messages",
      "type": "python",
      "request": "launch",
      "module": "goxlrutilityapi",
      "preLaunchTask": "Module: pip install",
      "cwd": "${workspaceFolder}/module",
      "justMyCode": false,
      "args": ["listen_for_messages", "--debug"]
    },
    {
      "name": "Set Button Color",
      "type": "python",
      "request": "launch",
      "module": "goxlrutilityapi",
      "preLaunchTask": "Module: pip install",
      "cwd": "${workspaceFolder}/module",
      "justMyCode": false,
      "args": ["set_button_color", "Bleep", "0000FF", "000000", "--debug"]
    }
  ]
}
